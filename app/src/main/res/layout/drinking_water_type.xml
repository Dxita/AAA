<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/margin_10"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="@dimen/margin_12"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/peach"
            android:textSize="@dimen/textsize_17sp"
            android:text="@string/drinking_water_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:textSize="@dimen/textsize_12sp"
                android:id="@+id/Mineral_water"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:layout_height="wrap_content"
                android:text="@string/Mineral_water"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:textSize="@dimen/textsize_12sp"
                android:id="@+id/normal_water"
                android:layout_width="0dp"
                android:textColor="@color/grey"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/normal_water"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:textSize="@dimen/textsize_12sp"
                android:id="@+id/both"
                android:textColor="@color/grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/both"
                android:onClick="onCheckboxClicked"/>


        </LinearLayout>

        <LinearLayout

            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView

                android:gravity="left"
                android:id="@+id/submit"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp"
                android:text="@string/submit_btn"
                android:padding="@dimen/margin_08"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cancel"
                android:gravity="center"
                android:padding="@dimen/margin_08"
                android:layout_gravity="center"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp"
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>