<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/offwhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.fragments.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="08dp"
                app:cardUseCompatPadding="true"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:src="@mipmap/profile"
                        android:layout_width="90dp"
                        android:layout_height="90dp">

                    </androidx.appcompat.widget.AppCompatImageView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:padding="05dp"
                        android:text="Profile Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatTextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/job_card"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="08dp"
                app:cardUseCompatPadding="true"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:src="@mipmap/job"
                        android:layout_width="90dp"
                        android:layout_height="90dp">

                    </androidx.appcompat.widget.AppCompatImageView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:padding="05dp"
                        android:text="Job Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatTextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/bank_card"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="08dp"
                app:cardUseCompatPadding="true"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:src="@mipmap/bank"
                        android:layout_width="90dp"
                        android:layout_height="90dp">

                    </androidx.appcompat.widget.AppCompatImageView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:padding="05dp"
                        android:text="Bank Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatTextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="08dp"
                app:cardUseCompatPadding="true"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:src="@mipmap/cards"
                        android:layout_width="90dp"
                        android:layout_height="90dp">

                    </androidx.appcompat.widget.AppCompatImageView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:padding="05dp"
                        android:text="Card Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatTextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/payment_card"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="08dp"
                app:cardUseCompatPadding="true"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:src="@mipmap/payment"
                        android:layout_width="90dp"
                        android:layout_height="90dp">

                    </androidx.appcompat.widget.AppCompatImageView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:padding="05dp"
                        android:text="Payment Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatTextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>





        </LinearLayout>

    </LinearLayout>

</RelativeLayout>