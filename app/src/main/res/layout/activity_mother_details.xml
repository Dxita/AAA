<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/custom_app_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">


    <androidx.appcompat.widget.Toolbar

        android:theme="@style/ToolbarTheme"
        android:id="@+id/toolbar"
        tool:title="@string/mother_details"
        android:layout_width="match_parent"
        tool:titleTextColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary">

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView

        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/beneficiary_type"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/beneficiary_type"
                android:textSize="@dimen/textsize_15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_05"
                android:enabled="false"
                android:padding="@dimen/margin_10"
                android:singleLine="false"
                android:textColor="@color/grey" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/mother_name"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/mother_name"
                android:layout_width="match_parent"
                android:textSize="@dimen/textsize_15sp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_05"
                android:enabled="false"
                android:padding="@dimen/margin_10"
                android:singleLine="false"
                android:textColor="@color/grey" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/age_of_mother"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/age_of_mother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_05"
                android:enabled="false"
                android:padding="@dimen/margin_10"
                android:textSize="@dimen/textsize_15sp"
                android:singleLine="false"
                android:textColor="@color/grey" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/height_cm"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/height_cm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_05"
                android:enabled="false"
                android:padding="@dimen/margin_10"
                android:singleLine="false"
                android:textSize="@dimen/textsize_15sp"
                android:textColor="@color/grey" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/mobile_no"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/mobile_no"
                android:layout_width="match_parent"
                android:textSize="@dimen/textsize_15sp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_05"
                android:enabled="false"
                android:padding="@dimen/margin_10"
                android:singleLine="false"
                android:textColor="@color/grey" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/live_child"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/live_child"
                android:layout_width="match_parent"
                android:textSize="@dimen/textsize_15sp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_05"
                android:enabled="false"
                android:padding="@dimen/margin_10"
                android:singleLine="false"
                android:textColor="@color/grey"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/husband_father"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp"/>

            <RadioGroup

                android:padding="@dimen/margin_05"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_husband"
                    android:text="@string/husband"
                    android:textSize="@dimen/textsize_15sp"
                    android:layout_width="@dimen/margin_0"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_father"
                    android:text="@string/father"
                    android:textSize="@dimen/textsize_15sp"
                    android:layout_width="@dimen/margin_0"
                    android:layout_height="wrap_content"/>
            </RadioGroup>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/husband_father_name"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/husband_father_name"
                android:layout_width="match_parent"
                android:textSize="@dimen/textsize_15sp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_05"
                android:enabled="false"
                android:padding="@dimen/margin_10"
                android:singleLine="false"
                android:textColor="@color/grey"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/lmc_date"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:drawablePadding="@dimen/margin_10"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                android:id="@+id/lmc_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_05"
                android:enabled="false"
                android:padding="@dimen/margin_10"
                android:textSize="@dimen/textsize_15sp"
                android:singleLine="false"
                android:textColor="@color/grey"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/registration_date"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:drawablePadding="@dimen/margin_10"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                android:id="@+id/registration_date"
                android:textSize="@dimen/textsize_15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_05"
                android:enabled="false"
                android:padding="@dimen/margin_10"
                android:singleLine="false"
                android:textColor="@color/grey"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_05"
                android:text="@string/delivery_date"
                android:textColor="@color/peach"
                android:textSize="@dimen/textsize_14sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:drawablePadding="@dimen/margin_10"
                android:textSize="@dimen/textsize_15sp"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                android:id="@+id/delivery_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_05"
                android:enabled="false"
                android:padding="@dimen/margin_10"
                android:singleLine="false"
                android:textColor="@color/grey"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>