<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_app_bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolbarTheme"
        android:visibility="gone"
        tool:title="@string/download_salary_slip"
        tool:titleTextColor="@color/white">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_emp_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_financial_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_14sp" />

        <TextView
            android:id="@+id/txt_emp_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_14sp" />

        <TextView
            android:id="@+id/txt_emp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:background="@drawable/header_border"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="Sr. No."
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.37"
                android:background="@drawable/header_border"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="Bill Name"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:background="@drawable/header_border"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="Payment Month"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@drawable/header_border"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="Amount (Rs.)"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14sp" />
        </LinearLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_download_salary_slip"
        android:layout_below="@id/ll_emp_data"
        android:scrollbars="vertical" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_download_salary_slip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/peach"
        android:text="@string/download"
        android:textColor="@color/white" />
</RelativeLayout>