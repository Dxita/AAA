<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin_10"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_08"
                android:layout_marginRight="@dimen/margin_08"
                app:srcCompat="@drawable/ic_user_admin" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_tv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_08"
                android:layout_weight="1"
                android:padding="@dimen/margin_10"
                android:text="@string/item_name"
                android:textSize="@dimen/textsize_17sp" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />


            <androidx.appcompat.widget.AppCompatEditText

                android:id="@+id/qty_edtx"
                android:layout_width="@dimen/margin_50"
                android:text="0"
                android:layout_height="@dimen/margin_50"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:cursorVisible="true"
                android:enabled="true"
                android:gravity="center"
                android:hint="@string/qty"
                android:inputType="number"
                android:padding="@dimen/margin_10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_17sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/edit_icon"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="@dimen/margin_08"
                android:layout_marginRight="@dimen/margin_08"
                android:visibility="gone"
                app:srcCompat="@drawable/edit" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>