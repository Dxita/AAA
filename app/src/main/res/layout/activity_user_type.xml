<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserTypeActivity">

    <RelativeLayout
        android:background="@color/offwhite"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login.NewSplashActivity">

        <LinearLayout
            android:layout_margin="@dimen/margin_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/logos"
                android:layout_width="@dimen/margin_70"
                android:layout_height="@dimen/margin_70"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="10sp"
                android:textSize="@dimen/textsize_22"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                android:elevation="10dp"
                android:id="@+id/c1"
                app:cardBackgroundColor="@color/skyblue"
                android:layout_margin="@dimen/margin_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_baseline_lock_24"
                        android:layout_width="80dp"
                        android:layout_height="90dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/white"
                        android:padding="10sp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:text="@string/admin_text"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:elevation="10dp"

                android:layout_below="@+id/c1"
                android:id="@+id/c2"
                app:cardBackgroundColor="@color/peach"
                android:layout_margin="@dimen/margin_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="08dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_baseline_person_24"
                        android:layout_width="80dp"
                        android:layout_height="90dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/white"
                        android:padding="10sp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:text="@string/user_text"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:elevation="10dp"

                android:id="@+id/c3"
                android:layout_below="@+id/c2"
                app:cardBackgroundColor="@color/lightgreen"
                android:layout_margin="@dimen/margin_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_baseline_public_24"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/white"
                        android:padding="10sp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:text="@string/public_text"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>