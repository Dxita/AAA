<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/offwhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
<!--
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backspace"
                android:layout_margin="@dimen/margin_12"
                app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30" />-->


            <LinearLayout
                android:layout_marginTop="@dimen/margin_45"
                android:orientation="vertical"
                android:id="@+id/otp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_baseline_verified_user_24"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="@dimen/margin_110" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/grey"
                    android:padding="@dimen/margin_10"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textStyle="bold"
                    android:text="@string/otp_txt"
                    android:textSize="@dimen/textsize_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>






            </LinearLayout>

<RelativeLayout
    android:layout_centerInParent="true"
    android:id="@+id/getOTPLayout"
    android:layout_below="@id/otp_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="@dimen/margin_10"

                android:layout_margin="@dimen/margin_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="@dimen/margin_15"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center"
                        android:text="OTP sent on 8XXXXXX899"
                        android:textSize="@dimen/textsize_14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatEditText

                        android:id="@+id/editTextInputMobile"
                        android:layout_margin="@dimen/margin_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buttonGetOTP"
                        android:textColor="@color/white"
                        android:background="@drawable/buttonbg"
                        android:text="@string/getotp"
                        android:textSize="@dimen/textsize_14sp"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_22"
                        android:layout_marginRight="@dimen/margin_22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

</RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_below="@id/otp_layout"
                android:layout_centerInParent="true"
                android:id="@+id/verifyOTPLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardElevation="@dimen/margin_10"
                    android:id="@+id/card"

                    android:layout_margin="@dimen/margin_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_margin="@dimen/margin_15"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:gravity="center"
                            android:text="OTP sent on 8XXXXXX899"
                            android:textSize="@dimen/textsize_14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <androidx.appcompat.widget.AppCompatEditText

                            android:id="@+id/editTextOTP"
                            android:layout_margin="@dimen/margin_12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonVerify"
                            android:textColor="@color/white"
                            android:background="@drawable/buttonbg"
                            android:text="@string/validate_text"
                            android:textSize="@dimen/textsize_14sp"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginLeft="@dimen/margin_22"
                            android:layout_marginRight="@dimen/margin_22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>