<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:background="@drawable/custom_app_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">


    <androidx.appcompat.widget.Toolbar

        android:theme="@style/ToolbarTheme"
        android:id="@+id/toolbar"
        tool:title="@string/card_details"
        android:layout_width="match_parent"
        tool:titleTextColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentLeft="true" >

    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_15"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_08"
                android:text="@string/asha_id"
                android:textColor="@color/blue"
                android:textSize="@dimen/textsize_15sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/asha_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_05"
                android:background="@color/sky"
                android:padding="@dimen/margin_10"
                android:textColor="@color/grey" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aadhar_no"
                android:textColor="@color/blue"
                android:textSize="@dimen/margin_15">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/aadhar_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_05"
                android:background="@color/sky"
                android:padding="@dimen/margin_10"
                android:textColor="@color/grey" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="08dp"
                android:text="@string/janaadhar_no"
                android:textColor="@color/blue"
                android:textSize="@dimen/textsize_15sp">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/janaadhar_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_05"
                android:background="@color/sky"
                android:padding="@dimen/margin_10"
                android:textColor="@color/grey" />

            <androidx.appcompat.widget.AppCompatTextView

                android:text="@string/bhamasha_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_08"
                android:textColor="@color/blue"
                android:textSize="@dimen/margin_15">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bhamasha_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_05"
                android:background="@color/sky"
                android:padding="@dimen/margin_10"
                android:textColor="@color/grey" />






            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="08dp"
                android:text="@string/janaadhar_self_no"
                android:textColor="@color/blue"
                android:textSize="@dimen/textsize_15sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/janaadhar_self_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_05"
                android:background="@color/sky"
                android:padding="@dimen/margin_10"
                android:textColor="@color/grey" />


            <androidx.appcompat.widget.AppCompatTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_08"
                android:text="@string/pan_card_no"
                android:textColor="@color/blue"
                android:textSize="@dimen/textsize_15sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pan_card_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_05"
                android:background="@color/sky"
                android:padding="@dimen/margin_10"
                android:textColor="@color/grey"/>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>