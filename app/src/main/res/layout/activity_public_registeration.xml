<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".public_u.activity.activity.PublicRegistrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_app_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/margin_60"
                android:layout_height="@dimen/margin_60"
                android:src="@drawable/app_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_08"
                android:layout_marginLeft="@dimen/margin_08"
                android:text="@string/welcome_text"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_100"
            android:fillViewport="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_20"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_15"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawablePadding="@dimen/margin_10"
                    android:hint="@string/first_name"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_15sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_15"
                    android:drawableStart="@drawable/ic_baseline_person_add_24"
                    android:drawableLeft="@drawable/ic_baseline_person_add_24"
                    android:drawablePadding="@dimen/margin_10"
                    android:hint="@string/last_name"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_15sp" />





                <LinearLayout
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_15"
                    android:orientation="vertical">



                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_05"
                            android:text="@string/district"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_15sp" />

                        <Spinner
                                android:layout_marginTop="@dimen/margin_05"
                            android:layout_marginBottom="@dimen/margin_05"
                            android:id="@+id/spinner1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_40"
                            android:background="@drawable/white_stroke"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />





                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_05"
                            android:text="@string/project"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_15sp" />

                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_marginBottom="@dimen/margin_05"
                            android:layout_marginTop="@dimen/margin_05"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_40"
                            android:background="@drawable/white_stroke"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />





                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_05"
                            android:text="@string/sector"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_15sp" />

                        <Spinner
                            android:id="@+id/spinner3"
                            android:layout_marginBottom="@dimen/margin_05"
                            android:layout_marginTop="@dimen/margin_05"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_40"
                            android:background="@drawable/white_stroke"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/margin_12"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_05"
                            android:text="@string/property_type"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_15sp" />


                        <RadioGroup
                            android:orientation="horizontal"
                            android:id="@+id/radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radio_button1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/margin_08"
                                android:text="@string/Commercial"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/textsize_14sp" />

                            <RadioButton
                                android:id="@+id/radio_button2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/margin_10"
                                android:text="@string/residential"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/textsize_14sp" />

                            <RadioButton
                                android:id="@+id/radio_button3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/others"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/textsize_14sp" />
                        </RadioGroup>


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/buttonbg"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/submit_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>