<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cdac.org.anganvadistaffutility"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:node="replace"
        tools:targetApi="q">
        <activity android:name=".public_u.activity.activity.PublicOTPVerificationActivity"></activity>
        <activity android:name=".user.activity.InfraCategoriesActivity" />
        <activity android:name=".user.activity.UserSectionActivity" />
        <activity android:name=".common.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".common.activity.SalaryDetailsTblActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.activity.CardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.activity.BankActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.activity.AwDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.activity.PaymentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.activity.JobActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.activity.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".common.activity.UserTypeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".common.activity.SelectLanguageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".common.activity.BaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.activity.VerifyUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.activity.VerifyOTPActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.activity.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin.activity.ViewAaGanWadiDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin.activity.ViewInfraStructureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin.activity.EmployeePaymentDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin.activity.ShowKPIActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin.activity.UsersGraphActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".admin.activity.UsersPieChartActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".admin.activity.DistrictWisePieChartActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".admin.activity.ProjectWisePieChartActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity android:name=".public_u.activity.activity.BuildingDetailsActivity" />
        <activity android:name=".public_u.activity.activity.PublicInfraActivity" />
        <activity android:name=".public_u.activity.activity.PublicLoginActivity" />
        <activity android:name=".public_u.activity.activity.PublicRegistrationActivity" />
        <activity android:name=".common.activity.GeneratePasswordActivity" />
        <activity android:name=".common.activity.PasswordActivity" />

        <receiver
            android:name=".common.receiver.SmsBroadcastReceiver"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.phone.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.gms.auth.api.phone.SMS_RETRIEVED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>